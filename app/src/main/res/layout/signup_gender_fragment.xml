<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="8dp"
    tools:context=".sign_up_fragments.SignUpGenderFragment">

    <LinearLayout
        android:id="@+id/account_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/what_s_your_gender"
            style="@style/ProfileHeaderStyle" />

        <TextView
            style="@style/ProfileValueStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="left"
            android:text="@string/pick_the_one_that_describes_you_the_best"
            android:textColor="#757575" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gender_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>





</LinearLayout>