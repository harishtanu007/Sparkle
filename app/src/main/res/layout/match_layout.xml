<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16sp"
    android:background="@drawable/rounded_corner_match_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/dancing_script_bold"
        android:gravity="center"
        android:text="Itâ€™s a Match!"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:padding="8sp"
        android:text="Lucy likes you too"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/match_send_message"
        style="@style/AppButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/send_message_button"
        android:fontFamily="@font/roboto_medium"
        android:textSize="15sp"
        android:text="SEND A MESSAGE" />

    <Button
        android:id="@+id/match_keep_swiping"
        style="@style/AppButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/keep_swiping_button"
        android:fontFamily="@font/roboto_medium"
        android:textSize="15sp"
        android:text="Keep Swiping" />

</LinearLayout>